<UserControl x:Class="NNSimulator.Controls.SOM"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NNSimulator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
  <Grid>
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Panel.ZIndex="1000" HorizontalAlignment="Left" Margin="10,10,0,0">
      <Button x:Name="btnOpen" Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,5,0" Click="btnOpen_Click" />
      <Button x:Name="btnRandom" Content="Random" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnRandom_Click" />
    </StackPanel>
    <Canvas x:Name="canv" Width="450" Height="450" Background="White"/>
  </Grid>
</UserControl>
