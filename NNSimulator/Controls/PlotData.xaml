<UserControl x:Class="NNSimulator.Controls.PlotData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NNSimulator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600" x:Name="plot">
  <Canvas x:Name="Surface" Width="600" Height="400" MouseDown="Surface_MouseDown" MouseMove="Surface_MouseMove" MouseUp="Surface_MouseUp" Background="White">
    <Button x:Name="btnClear" Content="Clear" Canvas.Left="10" Canvas.Top="10" Click="btnClear_Click"/>
    <Polyline x:Name="plln" Stroke="#FF336DD3" StrokeThickness="2"/>
    <Polyline x:Name="plln2" Stroke="#FFC77A1E" StrokeThickness="2"/>
  </Canvas>
</UserControl>
